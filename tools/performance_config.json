{
  "performance": {
    "target_fps": 60,
    "viewport_width": 720,
    "viewport_height": 720,
    "crop_threshold": 1.5,
    "transition_fps": 30,
    
    "raspberry_pi": {
      "enabled": false,
      "optimizations": {
        "viewport_width": 600,
        "viewport_height": 600,
        "use_fast_scale": true,
        "cache_scaled_images": true,
        "reduce_transition_fps": 24,
        "disable_smoothscale": false,
        "target_fps": 30
      }
    },
    
    "scaling": {
      "method": "smoothscale",
      "crop_optimization": true,
      "crop_margin": 2
    }
  },
  
  "display": {
    "fullscreen": false,
    "window_width": 1600,
    "window_height": 919,
    "show_fps": true,
    "debug_mode": false
  }
}
